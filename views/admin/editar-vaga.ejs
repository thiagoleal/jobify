<%- include('header') %>
    <h2>
        Editar Vaga:
        <a href="/admin/vagas">Vagas</a>
    </h2>
    <div>

        <form method="POST">
            <label>Título:</label>
                <input type="text" name="title" value="<%= job.title %>">
            <br>


            <label>Descrição:</label>
                <textarea name="description"><%= job.description %></textarea>
            <br>

            <label>Categoria:</label>
                <select name="category">
                    <% categories.forEach( category => { %>
                       <option value="<%= category.id %>" <% if(category.id == job.category){%>selected<% } %>><%= category.category %></option>
                    <% }); %>
                </select>
            <br>

            <button>Salvar vaga</button>
        </form>
    </div>
<%- include('footer') %>